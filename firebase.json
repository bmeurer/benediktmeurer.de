{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|mjs)",
        "headers": [{
          "key": "Content-Type",
          "value": "text/javascript;charset=utf-8"
        }]
      },
      {
        "source": "/feed.xml",
        "headers": [{
          "key": "Content-Type",
          "value": "application/atom+xml;charset=utf-8"
        }]
      },
      {
        "source": "/sitemap.xml",
        "headers": [{
          "key": "Content-Type",
          "value": "application/xml;charset=utf-8"
        }]
      },
      {
        "source": "**/*.@(mjs|js|css)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31557600"
        }]
      },
      {
        "source": "**/*.@(jpg|gif|png|svg|ico|webmanifest)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=31557600"
        }]
      }
    ],
    "trailingSlash": false,
    "cleanUrls": true
  }
}
