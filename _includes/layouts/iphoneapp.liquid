<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>{{ title }}</title>

  <!-- Site Author -->
  <meta name="author" content="{{ site.author }}" />

  <!-- Page Description -->
  <meta name="description" content="{{ description }}" />

  <!-- Google Site Verification -->
  <meta name="google-site-verification" content="1gkRIROhZsIi5eq-oNYG1R73thPYUmsb7IIQpDpBiB0" />

  <!-- CSS -->
  <link href="/css/reset.css" rel="stylesheet" type="text/css" media="screen, projection" />
  <link href="/css/iphoneapp.css" rel="stylesheet" type="text/css" media="screen, projection" />

  <!-- Fav Icon -->
  <link href="/images/{{ folder }}/favicon.ico" rel="shortcut icon" type="image/x-icon" />

  <!-- jQuery -->
  <script src="/js/jquery.min.js" type="text/javascript"></script>

  <!-- SlideShow -->
  <script src="/js/slideshow.js" type="text/javascript"></script>

  <!--[if IE]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>

<body>
  <div id="page">
    <div id="center">
      {{ content }}
      <footer>
        <p>
          Copyright &copy; {{ site.time | date: "%Y" }} {{ site.author }}
          &nbsp;|&nbsp;
          <a href="{{ site.url }}">{{ site.url }}</a>
          &nbsp;|&nbsp;
          <a href="http://www.twitter.com/{{ site.twitter }}">@{{ site.twitter }}</a>
        </p>
      </footer>
    </div>
  </div>
  {% include ga.html %}
</body>

</html>
